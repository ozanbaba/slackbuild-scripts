# This script is for building from a git tree or source tree. 
# Run it as WINEGIT=/path/git/tree ./wine64.SlackBuild

PRGNAM=wine64
BUILD=${BUILD:-1}
TAG=${TAG:-_Oz}
PKGTYPE=${PKGTYPE:-tgz}

#automatic ARCH delection from SBo

if [ -z "$ARCH" ]; then 
	case "$( uname -m )" in
		i?86) ARCH=i486 ;;
		arm*) ARCH=arm ;;
		*) ARCH=$( uname -m) ;;
	esac
fi

if [ -z "$WINEGIT" ]; then
	echo Please specify WINEGIT=/path/git/tree
	exit 0
fi

VERSION="$( cat $WINEGIT/VERSION | awk '{ print $3}' )"

CWD=$(pwd)
TMP=${TMP:-/tmp/Oz}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}
BDIR=$TMP/$PRGNAM
MAKEDEP=${MAKEDEP:-no}

set -e

if [ "$ARCH" = "i486" ]; then
	echo "Can't compile it for i386"
	false
elif [ "$ARCH" = "i686" ]; then
	echo "Can't compile it for i686"
	false
elif [ "$ARCH" = "x86_64" ]; then
	SLKCFLAGS="-O2 -fPIC"
	LIBDIRSUFFIX="64"
else 
	echo "You're on your own"
	SLKCFLAGS="-O2"
	LIBDIRSUFFIX=""
fi

rm -rf $PKG
mkdir -p $TMP $PKG $OUTPUT $TMP/$PRGNAM $BDIR
cd $WINEGIT
WINE_GIT=$(pwd)

#Saving ownerships for future recovery
USER=$( ls -l $WINE_GIT/VERSION | awk '{ print $3 }' )
GROUP=$( ls -l $WINE_GIT/VERSION | awk '{ print $4 }' )


#Changing ownerships

chown -R root:root .
find . \
 \( -perm 777 -o -perm 775 -o -perm 711 -o -perm 555 -o -perm 511 \) \
  -exec chmod 755 {} \; -o \
 \( -perm 666 -o -perm 664 -o -perm 600 -o -perm 444 -o -perm 440 -o -perm 400 \) \
  -exec chmod 644 {} \;

cd $BDIR 
CFLAGS="$SLKCFLAGS" \
CXXFLAGS="$SLKCFLAGS" \
$WINE_GIT/configure \
 --prefix=/usr \
 --enable-win64 \
 --libdir=/usr/lib64 \
 --mandir=/usr/man \
 --docdir=/usr/doc/$PRGNAM-$VERSION \
 --build=$ARCH-slackware-linux

if [ "$MAKEDEP" = "yes" ]; then
make depend
fi

make
make install DESTDIR=$PKG

#Strip the binaries
find $PKG | xargs file | grep -e "executable" -e "shared object" | grep ELF \
 | cut -f 1 -d : | xargs strip --strip-unneeded 2> /dev/null || true

#Compress the man pages
find $PKG/usr/man -type f -exec gzip -9 {} \;
for i in $( find $PKG/usr/man -type l ) ; do ln -s $( readlint $i ).gz $i.gz ; rm $i ; done

#Copying docs
mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cp -a \
 $WINE_GIT/ANNOUNCE $WINE_GIT/AUTHORS $WINE_GIT/COPYING.LIB $WINE_GIT/LICENSE* \
 $WINE_GIT/README $WINE_GIT/VERSION $PKG/usr/doc/$PRGNAM-$VERSION
cat $CWD/$PRGNAM.SlackBuild > $PKG/usr/doc/$PRGNAM-$VERSION/$PRGNAM.SlackBuild

#Copying /install
mkdir -p $PKG/install
cat $CWD/wine64-slack-desc > $PKG/install/slack-desc
cat $CWD/doinst.sh > $PKG/install/doinst.sh

#Creating the package
cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.$PKGTYPE

#Changing ownership of git tree back
echo $USER:$GROUP
cd $WINE_GIT
chown -R $USER:$GROUP .

