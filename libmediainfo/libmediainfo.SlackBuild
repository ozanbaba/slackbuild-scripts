PRGNAM=libmediainfo			
VERSION=${VERSION:-0.7.35}	
BUILD=${BUILD:-1}
TAG=${TAG:-_SBo}

# Automatically determine the architecture we're building on:
if [ -z "$ARCH" ]; then
  case "$( uname -m )" in
    i?86) ARCH=i486 ;;
    arm*) ARCH=arm ;;
    # Unless $ARCH is already set, use uname -m for all other archs:
       *) ARCH=$( uname -m ) ;;
  esac
fi

CWD=$(pwd)
TMP=${TMP:-/tmp/SBo}	
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}	

if [ "$ARCH" = "i486" ]; then
  SLKCFLAGS="-O2 -march=i486 -mtune=i686"
  LIBDIRSUFFIX=""
elif [ "$ARCH" = "i686" ]; then
  SLKCFLAGS="-O2 -march=i686 -mtune=i686"
  LIBDIRSUFFIX=""
elif [ "$ARCH" = "x86_64" ]; then
  SLKCFLAGS="-O2 -fPIC"
  LIBDIRSUFFIX="64"
else
  SLKCFLAGS="-O2"
  LIBDIRSUFFIX=""
fi

set -e 

rm -rf $PKG
mkdir -p $TMP $PKG $OUTPUT
cd $TMP
rm -rf $PRGNAM-$VERSION
tar xvf $CWD/${PRGNAM}_$VERSION.tar.bz2
mv MediaInfoLib $PRGNAM-$VERSION 
cd $PRGNAM-$VERSION
chown -R root:root .
find . \
 \( -perm 777 -o -perm 775 -o -perm 711 -o -perm 555 -o -perm 511 \) \
 -exec chmod 755 {} \; -o \
 \( -perm 666 -o -perm 664 -o -perm 600 -o -perm 444 -o -perm 440 -o -perm 400 \) \
 -exec chmod 644 {} \;

cd Project/GNU/Library
./autogen
CFLAGS="$SLKCFLAGS" \
CXXFLAGS="$SLKCFLAGS" \
./configure \
  --prefix=/usr \
  --libdir=/usr/lib${LIBDIRSUFFIX} \
  --includedir=/usr/include \
  --enable-shared \
  --build=$ARCH-slackware-linux \
  --docdir=/usr/doc/$PRGNAM-$VERSION

make
make install-strip DESTDIR=$PKG

mkdir -p $PKG/usr/include/MediaInfo
cp -a $TMP/$PRGNAM-$VERSION/Source/MediaInfo/*.h $PKG/usr/include/MediaInfo
mkdir -p $PKG/usr/include/MediaInfoDLL
cp -a $TMP/$PRGNAM-$VERSION/Source/MediaInfoDLL/*.h $PKG/usr/include/MediaInfoDLL
cp -a $TMP/$PRGNAM-$VERSION/Source/MediaInfoDLL/*.cs $PKG/usr/include/MediaInfoDLL
cp -a $TMP/$PRGNAM-$VERSION/Source/MediaInfoDLL/*.java $PKG/usr/include/MediaInfoDLL
cp -a $TMP/$PRGNAM-$VERSION/Source/MediaInfoDLL/*.py $PKG/usr/include/MediaInfoDLL


mkdir -p $PKG/usr/lib${LIBDIRSUFFIX}/pkgconfig
cat $TMP/$PRGNAM-$VERSION/Project/GNU/Library/libmediainfo.pc > $PKG/usr/lib${LIBDIRSUFFIX}/pkgconfig/libmediainfo.pc

mkdir -p $PKG/usr/bin
cp $TMP/$PRGNAM-$VERSION/Project/GNU/Library/libmediainfo-config $PKG/usr/bin

mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cd $TMP/$PRGNAM-$VERSION
cp -a \
  History_DLL.txt License.html ReadMe.txt Changes.txt Source/Doc/Documentation.html \
  $PKG/usr/doc/$PRGNAM-$VERSION

cat $CWD/$PRGNAM.SlackBuild > $PKG/usr/doc/$PRGNAM-$VERSION/$PRGNAM.SlackBuild

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.${PKGTYPE:-tgz}
